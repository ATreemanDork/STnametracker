{
  "name": "sillytavern-nametracker",
  "version": "2.1.0",
  "description": "Character tracking extension for SillyTavern",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "webpack --mode=production",
    "dev": "webpack --mode=development --watch", 
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "clean": "rimraf dist",
    "validate": "node validate-interfaces.js && node validate-method-calls.js",
    "validate:interfaces": "node validate-interfaces.js",
    "validate:methods": "node validate-method-calls.js",
    "validate:core": "npm run validate && npm run lint",
    "validate:all": "npm run validate:core && npm run build",
    "validate:strict": "npm run validate && npm run lint && npm run build",
    "precommit": "node scripts/pre-commit-validate.js",
    "test:interface": "npm run validate:core"
  },
  "keywords": ["sillytavern", "extension", "character-tracking"],
  "author": "ATreemanDork",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "css-loader": "^7.1.2",
    "eslint": "^9.0.0",
    "globals": "^15.0.0",
    "html-loader": "^5.1.0",
    "rimraf": "^6.0.1",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.10",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4"
  }
}